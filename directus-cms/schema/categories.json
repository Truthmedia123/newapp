{
  "collection": "categories",
  "meta": {
    "icon": "category",
    "color": "pink",
    "note": "Types of wedding vendors",
    "sort_field": "sort",
    "archive_field": "status",
    "archive_value": "archived",
    "unarchive_value": "published",
    "archive_app_filter": true
  },
  "schema": {
    "name": "categories",
    "comment": "Vendor Categories"
  },
  "fields": [
    {
      "field": "id",
      "type": "integer",
      "meta": {
        "hidden": true,
        "readonly": true,
        "interface": "input",
        "special": ["uuid"]
      },
      "schema": {
        "is_primary_key": true,
        "has_auto_increment": true,
        "is_nullable": false
      }
    },
    {
      "field": "name",
      "type": "string",
      "meta": {
        "interface": "input",
        "options": {
          "iconLeft": "title"
        },
        "width": "full",
        "required": true
      },
      "schema": {
        "is_nullable": false,
        "is_unique": true
      }
    },
    {
      "field": "slug",
      "type": "string",
      "meta": {
        "interface": "input",
        "options": {
          "iconLeft": "link"
        },
        "width": "half"
      },
      "schema": {
        "is_nullable": false,
        "is_unique": true
      }
    },
    {
      "field": "description",
      "type": "text",
      "meta": {
        "interface": "input-multiline",
        "width": "full"
      }
    },
    {
      "field": "icon",
      "type": "string",
      "meta": {
        "interface": "select-icon",
        "width": "half"
      }
    },
    {
      "field": "color",
      "type": "string",
      "meta": {
        "interface": "select-color",
        "width": "half"
      }
    },
    {
      "field": "sort",
      "type": "integer",
      "meta": {
        "interface": "input",
        "hidden": true
      }
    },
    {
      "field": "status",
      "type": "string",
      "meta": {
        "interface": "select-dropdown",
        "options": {
          "choices": [
            {
              "text": "Published",
              "value": "published"
            },
            {
              "text": "Draft",
              "value": "draft"
            },
            {
              "text": "Archived",
              "value": "archived"
            }
          ]
        },
        "width": "half"
      },
      "schema": {
        "default_value": "draft"
      }
    },
    {
      "field": "created_at",
      "type": "timestamp",
      "meta": {
        "interface": "datetime",
        "readonly": true,
        "width": "half",
        "special": ["date-created"]
      },
      "schema": {
        "is_nullable": true
      }
    },
    {
      "field": "updated_at",
      "type": "timestamp",
      "meta": {
        "interface": "datetime",
        "readonly": true,
        "width": "half",
        "special": ["date-updated"]
      },
      "schema": {
        "is_nullable": true
      }
    }
  ]
}