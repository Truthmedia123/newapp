{
  "collection": "vendors",
  "meta": {
    "icon": "store",
    "color": "blue",
    "note": "Wedding vendor listings",
    "sort_field": "sort",
    "archive_field": "status",
    "archive_value": "inactive",
    "unarchive_value": "active",
    "archive_app_filter": true
  },
  "schema": {
    "name": "vendors",
    "comment": "Wedding Vendors"
  },
  "fields": [
    {
      "field": "id",
      "type": "uuid",
      "meta": {
        "hidden": true,
        "readonly": true,
        "interface": "input",
        "special": ["uuid"]
      },
      "schema": {
        "is_primary_key": true,
        "has_auto_increment": false,
        "is_nullable": false,
        "is_unique": true
      }
    },
    {
      "field": "name",
      "type": "string",
      "meta": {
        "interface": "input",
        "options": {
          "iconLeft": "title"
        },
        "width": "full",
        "required": true
      },
      "schema": {
        "is_nullable": false
      }
    },
    {
      "field": "category",
      "type": "integer",
      "meta": {
        "interface": "select-dropdown-m2o",
        "options": {
          "template": "{{name}}"
        },
        "width": "half"
      },
      "schema": {
        "foreign_key_table": "categories",
        "foreign_key_column": "id"
      }
    },
    {
      "field": "description",
      "type": "text",
      "meta": {
        "interface": "input-rich-text-html",
        "width": "full"
      }
    },
    {
      "field": "price_range",
      "type": "string",
      "meta": {
        "interface": "select-dropdown",
        "options": {
          "choices": [
            {
              "text": "$",
              "value": "$"
            },
            {
              "text": "$$",
              "value": "$$"
            },
            {
              "text": "$$$",
              "value": "$$$"
            },
            {
              "text": "$$$$",
              "value": "$$$$"
            }
          ]
        },
        "width": "half"
      }
    },
    {
      "field": "location",
      "type": "string",
      "meta": {
        "interface": "select-dropdown",
        "options": {
          "choices": [
            {
              "text": "North Goa",
              "value": "North Goa"
            },
            {
              "text": "South Goa",
              "value": "South Goa"
            }
          ]
        },
        "width": "half"
      }
    },
    {
      "field": "phone",
      "type": "string",
      "meta": {
        "interface": "input",
        "options": {
          "iconLeft": "phone"
        },
        "width": "half"
      }
    },
    {
      "field": "email",
      "type": "string",
      "meta": {
        "interface": "input",
        "options": {
          "iconLeft": "email"
        },
        "width": "half"
      },
      "schema": {
        "is_nullable": true
      }
    },
    {
      "field": "website",
      "type": "string",
      "meta": {
        "interface": "input",
        "options": {
          "iconLeft": "link"
        },
        "width": "full"
      }
    },
    {
      "field": "social_media",
      "type": "json",
      "meta": {
        "interface": "group-detail",
        "options": {
          "fields": [
            "facebook",
            "instagram",
            "linkedin",
            "twitter"
          ]
        },
        "width": "full"
      },
      "schema": {
        "default_value": "{}"
      },
      "children": [
        {
          "field": "facebook",
          "type": "string",
          "meta": {
            "interface": "input",
            "options": {
              "iconLeft": "facebook"
            },
            "width": "half"
          }
        },
        {
          "field": "instagram",
          "type": "string",
          "meta": {
            "interface": "input",
            "options": {
              "iconLeft": "instagram"
            },
            "width": "half"
          }
        },
        {
          "field": "linkedin",
          "type": "string",
          "meta": {
            "interface": "input",
            "options": {
              "iconLeft": "linkedin"
            },
            "width": "half"
          }
        },
        {
          "field": "twitter",
          "type": "string",
          "meta": {
            "interface": "input",
            "options": {
              "iconLeft": "twitter"
            },
            "width": "half"
          }
        }
      ]
    },
    {
      "field": "images",
      "type": "alias",
      "meta": {
        "interface": "files",
        "options": {
          "folder": null
        },
        "width": "full",
        "special": ["files"]
      }
    },
    {
      "field": "featured_image",
      "type": "uuid",
      "meta": {
        "interface": "file-image",
        "width": "half"
      }
    },
    {
      "field": "rating",
      "type": "decimal",
      "meta": {
        "interface": "rating",
        "width": "half"
      },
      "schema": {
        "numeric_precision": 3,
        "numeric_scale": 2
      }
    },
    {
      "field": "reviews_count",
      "type": "integer",
      "meta": {
        "interface": "input",
        "readonly": true,
        "width": "half"
      },
      "schema": {
        "default_value": 0
      }
    },
    {
      "field": "availability_calendar",
      "type": "json",
      "meta": {
        "interface": "input-code",
        "options": {
          "language": "json"
        },
        "width": "full"
      },
      "schema": {
        "default_value": "{}"
      }
    },
    {
      "field": "status",
      "type": "string",
      "meta": {
        "interface": "select-dropdown",
        "options": {
          "choices": [
            {
              "text": "Active",
              "value": "active"
            },
            {
              "text": "Inactive",
              "value": "inactive"
            },
            {
              "text": "Pending",
              "value": "pending"
            }
          ]
        },
        "width": "half"
      },
      "schema": {
        "default_value": "pending"
      }
    },
    {
      "field": "created_at",
      "type": "timestamp",
      "meta": {
        "interface": "datetime",
        "readonly": true,
        "width": "half",
        "special": ["date-created"]
      },
      "schema": {
        "is_nullable": true
      }
    },
    {
      "field": "updated_at",
      "type": "timestamp",
      "meta": {
        "interface": "datetime",
        "readonly": true,
        "width": "half",
        "special": ["date-updated"]
      },
      "schema": {
        "is_nullable": true
      }
    }
  ]
}